<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvStockName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="#E2E2E2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:minHeight="30dp"
        tools:text="Item Name dfasljf dasflkjadf adlkfjadsf fdlakjfad fldjaksfald fadksljfasdlf"
        android:textSize="12sp"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etQty"
        app:layout_constraintStart_toStartOf="parent"
       />

    <EditText
        android:id="@+id/etQty"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#E2E2E2"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"
        android:imeOptions="actionDone"
        android:lines="1"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/tvStockName"
        app:layout_constraintBottom_toBottomOf="@+id/tvStockName"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>