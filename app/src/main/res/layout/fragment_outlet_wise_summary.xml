<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.fastservices.sams.modules.outletwise.OutletWiseVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/lableView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/lblOutletCode"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="Outlet Code"
        android:textColor="@color/textcolor_green"
        android:textSize="9sp"
       />

    <TextView
        android:id="@+id/lblOutletName"
        android:layout_width="0dp"
        android:layout_weight="0.36"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Outlet Name"
        android:textColor="@color/textcolor_green"
        android:textSize="@dimen/textsize_order_details" />

    <TextView
        android:id="@+id/lblNetAmount"
        android:layout_width="0dp"
        android:layout_weight="0.23"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:text="Net Value"
        android:gravity="center"
        android:textColor="@color/textcolor_green"
        android:textSize="@dimen/textsize_order_details" />
    <TextView
        android:id="@+id/lblOrderTime"
        android:layout_width="0dp"
        android:layout_weight="0.21"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:text="Order Time"
        android:gravity="center"
        android:textColor="@color/textcolor_green"
        android:textSize="@dimen/textsize_order_details" />
</LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/lableView"
            app:layout_constraintBottom_toTopOf="@+id/tvTotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:itemCount="5"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_outlet_wise_summary"/>


        <TextView
            android:id="@+id/tvTotal"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tvTotalAmount"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/item_order_detail_bg"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="Total"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/textsize_order_details" />


        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/item_order_detail_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@{viewModel.totalAmount}"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/textsize_order_details"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvTotal"
            app:layout_constraintTop_toTopOf="@+id/tvTotal"
            tools:text="Net Value" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>